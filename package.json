{
    "type": "module",
    "name": "online-store",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "prebuild": "node build-scripts/prebuild-scripts/backup-index.mjs && node build-scripts/prebuild-scripts/minify-index.mjs --prebuild",
        "postbuild": "node build-scripts/postbuild-scripts/restore-index.mjs && node build-scripts/postbuild-scripts/minify-dist-index.mjs --postbuild",
        "build:original-script": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "serve:ssr:web": "node dist/web/server/server.mjs",
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "format-and-lint": "prettier --write . && eslint . --ext .js,.ts --fix",
        "prepare": "simple-git-hooks",
        "hook:pre-commit": "lint-staged",
        "hook:commit-msg": "commitlint --edit"
    },
    "simple-git-hooks": {
        "pre-commit": "npm.cmd run hook:pre-commit",
        "commit-msg": "npm.cmd run hook:commit-msg -- $1"
    },
    "private": true,
    "lint-staged": {
        "*.html": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@angular/animations": "^21.0.8",
        "@angular/common": "^21.0.8",
        "@angular/compiler": "^21.0.8",
        "@angular/core": "^21.0.8",
        "@angular/forms": "^21.0.8",
        "@angular/platform-browser": "^21.0.8",
        "@angular/platform-browser-dynamic": "^21.0.8",
        "@angular/platform-server": "^21.0.8",
        "@angular/router": "^21.0.8",
        "@angular/ssr": "^21.0.4",
        "@ngrx/effects": "^21.0.1",
        "@ngrx/operators": "^21.0.1",
        "@ngrx/router-store": "^21.0.1",
        "@ngrx/store": "^21.0.1",
        "bootstrap": "^5.3.8",
        "express": "^5.2.1",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.16.0"
    },
    "devDependencies": {
        "@angular/build": "^21.0.4",
        "@angular/cli": "^21.0.5",
        "@angular/compiler-cli": "^21.0.8",
        "@angular/localize": "^21.0.8",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@ngrx/store-devtools": "^21.0.1",
        "@types/express": "^5.0.6",
        "@types/jasmine": "~5.1.13",
        "@types/node": "^25.0.3",
        "angular-eslint": "^21.1.0",
        "browser-sync": "^3.0.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-formatter-codeframe": "^7.32.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-unused-imports": "^4.3.0",
        "html-minifier-terser": "^7.2.0",
        "jasmine-core": "~5.13.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "simple-git-hooks": "^2.13.1",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.50.1",
        "xml-sitemap-url-scraper": "^1.1.0"
    }
}
