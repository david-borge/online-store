/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "src/*": ["*"],
            "@config/*": ["config/*"],
            "@core/*": ["app/core/*"],
            "@core/components/*": ["app/core/components/*"],
            "@core/guards/*": ["app/core/guards/*"],
            "@core/models/*": ["app/core/models/*"],
            "@core/pipes/*": ["app/core/pipes/*"],
            "@core/services/*": ["app/core/services/*"],
            "@core/store/*": ["app/core/store/*"],
            "@features/admin/*": ["app/features/admin/*"],
            "@features/ecommerce/*": ["app/features/ecommerce/*"],
            "@shared/*": ["app/shared/*"],
            "@shared/components/*": ["app/shared/components/*"],
            "@shared/directives/*": ["app/shared/directives/*"]
        },
        "outDir": "./out-tsc/spec",
        "types": ["jasmine"]
    },
    "include": ["src/**/*.d.ts", "src/**/*.spec.ts"]
}
